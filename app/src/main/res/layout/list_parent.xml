<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/idTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person_main"
                            android:drawablePadding="16dp"
                            android:layout_weight="7"
                            android:padding="16dp"
                            android:text="Name"
                            android:drawableTint="@color/colorAccent"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:id="@+id/idDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="8dp"
                            android:gravity="end"
                            android:text="2018-06-19" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/popopMenu"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_menu"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/call"
                            android:src="@drawable/ic_call_black_24dp"
                            android:tint="@color/colorAccent"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idNo"
                            android:textSize="16sp"
                            android:layout_weight="6"
                            android:layout_marginLeft="8dp"
                            android:text="9876543210"/>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idLocation"
                            android:textSize="16sp"
                            android:layout_weight="4"
                            android:layout_marginLeft="16sp"
                            android:drawablePadding="@dimen/activity_horizontal_margin"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_location_24dp"
                            android:text="Location"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mail"
                            android:src="@drawable/ic_email_black_24dp"
                            android:tint="@color/colorAccent"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idMail"
                            android:textSize="16sp"
                            android:layout_weight="7"
                            android:layout_marginLeft="8dp"
                            android:text="gmail@gmail.com"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:id="@+id/idRemark"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:drawableTint="@color/colorAccent"
                    android:drawableLeft="@drawable/ic_bookmark_border_black_24dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/leadstatus"
                                    android:src="@drawable/ic_initiated"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Initiated"
                                    android:id="@+id/txtleadStatus"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                                <RatingBar
                                    android:id="@+id/leadRating"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_vertical|center"
                                    android:animateLayoutChanges="true"
                                    android:progressTint="@android:color/holo_orange_light"
                                    android:rating="5"
                                    android:visibility="gone" />
                        </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:animateLayoutChanges="true"
                            android:button="@drawable/ic_arrow_downward"
                            android:id="@+id/addData"/>




                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:gravity="end"
                            android:animateLayoutChanges="true"
                            android:text="Give Rattings"
                            android:id="@+id/giveRating"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:layout_marginEnd="@dimen/activity_vertical_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            />
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:id="@+id/subLayout"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/error"
                            android:animateLayoutChanges="true"
                            android:text="No information available , please add some information."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f1fcf7"
                            android:paddingBottom="8dp"
                            android:clipToPadding="false"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/subReCycler"/>

                </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>