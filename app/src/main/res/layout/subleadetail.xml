<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/subDate"
        android:text="19/07/2018"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subDetail"
        android:textSize="@dimen/activity_vertical_margin"
        android:drawableLeft="@drawable/ic_contact"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:text="This is test credential for detail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subRemark"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/activity_vertical_margin"
        android:drawableLeft="@drawable/ic_tag"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:text="This is test credential for Remark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subAssign"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/activity_vertical_margin"
        android:text="This is test credential for Remark"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/substatus"
                    android:src="@drawable/ic_initiated"
                    style="@style/Widget.AppCompat.RatingBar.Small"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initiated"
                android:id="@+id/txtStatus"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="#ffc107"/>


    </LinearLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            android:id="@+id/subRating"
            android:layout_gravity="center_vertical"
            android:progressTint="@android:color/holo_orange_light"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

    </LinearLayout>
</LinearLayout>